<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFBB33"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.helloworldd.MainActivity" >
    
     <com.example.helloworldd.MyCanvas
         android:id="@+id/nigger"
         android:layout_width="match_parent"
         android:layout_height="270dp"
         android:textColor="#FFFFFF" />

     <Button
         android:id="@+id/button1"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignStart="@+id/nigger"
         android:layout_alignLeft="@+id/nigger"
         android:layout_below="@+id/nigger"
         android:layout_marginTop="10dp"
         android:onClick="north"
         android:background="@drawable/buttom"
         android:text="Go north" />

     <TextView
         android:id="@+id/info2"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignStart="@+id/info1"
         android:layout_alignLeft="@+id/info1"
         android:layout_below="@+id/info1"
         android:text="Nothing happened"
         android:textAppearance="?android:attr/textAppearanceMedium" />

     <TextView
         android:id="@+id/info1"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignBaseline="@+id/button1"
         android:layout_alignBottom="@+id/button1"
         android:layout_marginLeft="22dp"
         android:layout_marginStart="32dp"
         android:layout_toEndOf="@+id/button1"
         android:layout_toRightOf="@+id/button1"
         android:text="You are in foyer"
         android:textAppearance="?android:attr/textAppearanceMedium" />
     

     <Button
         android:id="@+id/button5"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_above="@+id/button4"
         android:layout_centerHorizontal="true"
         android:background="@drawable/buttom"
         android:onClick="attack"
         android:text="Attack" />

     <TextView
         android:id="@+id/textView3"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignTop="@+id/button4"
         android:layout_marginLeft="12dp"
         android:layout_toRightOf="@+id/button5"
         android:text="Attack: 2"
         android:textAppearance="?android:attr/textAppearanceSmall" />

     <TextView
         android:id="@+id/textView1"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignLeft="@+id/textView3"
         android:layout_alignTop="@+id/button5"
         android:text="Health: 6"
         android:textAppearance="?android:attr/textAppearanceSmall" />

     <Button
         android:id="@+id/button2"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignRight="@+id/button2"
         android:layout_alignEnd="@+id/button1"
         android:layout_alignLeft="@+id/button2"
         android:layout_alignStart="@+id/button1"
         android:layout_alignTop="@+id/info2"
         android:layout_marginTop="10dp"
         android:layout_toLeftOf="@+id/info1"
         android:background="@drawable/buttom"
         android:onClick="east"
         android:text="Go east" />

     <Button
         android:id="@+id/button3"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignRight="@+id/button2"
         android:layout_alignEnd="@+id/button2"
         android:layout_alignLeft="@+id/button2"
         android:layout_alignStart="@+id/button2"
         android:layout_below="@+id/button2"
         android:layout_marginTop="10dp"
         android:layout_toLeftOf="@+id/info1"
         android:background="@drawable/buttom"
         android:onClick="west"
         android:text="Go west" />

     <Button
         android:id="@+id/button4"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignRight="@+id/button2"
         android:layout_alignEnd="@+id/button3"
         android:layout_alignLeft="@+id/button2"
         android:layout_alignStart="@+id/button3"
         android:layout_below="@+id/button3"
         android:layout_marginTop="10dp"
         android:layout_toLeftOf="@+id/info1"
         android:background="@drawable/buttom"
         android:onClick="south"
         android:text="Go south" />
     
     
     <ImageView
         android:id="@+id/imageView1"
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:scaleType="centerCrop"
         android:src="@drawable/sad" />

</RelativeLayout>